<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--hot fix the ad choice view background issue, should be moved into doris-android lib-->
    <!--hot fix the ad choice view background issue, should be moved into doris-android lib-->
    <!--hot fix the ad choice view background issue, should be moved into doris-android lib-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="#CC252525" />
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
        </shape>
    </item>
    <item>
        <selector>
            <item
                android:drawable="@drawable/ic_icon_bg"
                android:state_focused="true" />
            <item
                android:drawable="@drawable/ic_icon_bg"
                android:state_pressed="true" />
            <item
                android:drawable="@drawable/ic_icon_bg"
                android:state_selected="true" />
            <item android:drawable="@android:color/transparent" />
        </selector>
    </item>

</layer-list>