<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playerControlsConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:targetApi="28"
    tools:viewBindingIgnore="true">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-4dp"
        android:background="@drawable/bg_player_bottom_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/horizontal_middle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="-4dp"
        android:background="@drawable/bg_player_top_gradient"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_middle"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controlsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/horizontal_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="30dp"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_begin="45dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_end="45dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_60_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintGuide_percent="0.6"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/titleTextView"
            style="@style/DorisText.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/secondTitleTextView"
            app:layout_constraintEnd_toEndOf="@id/vertical_60_guideline"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/start_vertical_guideline"
            app:layout_constraintTop_toBottomOf="@id/nowPlayingContainer"
            tools:text="Title of video" />

        <TextView
            android:id="@+id/secondTitleTextView"
            style="@style/DorisText.SecondTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/vertical_60_guideline"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/titleTextView"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            tools:text="S1 : E4 - The one where things happen" />

        <com.diceplatform.doris.ui.TopIconsView
            android:id="@+id/topIconsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/end_vertical_guideline"
            app:layout_constraintTop_toTopOf="@id/horizontal_top">

            <com.diceplatform.doris.ui.LabeledImageView
                android:id="@+id/annotationsButton"
                style="@style/DorisButton.Annotations"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:adjustViewBounds="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <com.diceplatform.doris.ui.LabeledImageView
                android:id="@+id/statsButton"
                style="@style/DorisButton.Stats"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="30dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintEnd_toStartOf="@id/annotationsButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginEnd="0dp"
                tools:ignore="ContentDescription" />

            <com.diceplatform.doris.ui.LabeledImageView
                android:id="@+id/trackButton"
                style="@style/DorisButton.Track"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="30dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintEnd_toStartOf="@id/statsButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginEnd="30dp"
                tools:ignore="ContentDescription" />

            <com.diceplatform.doris.ui.LabeledImageView
                android:id="@+id/watchlistButton"
                style="@style/DorisButton.Watchlist"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="30dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintEnd_toStartOf="@id/trackButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginEnd="30dp"
                tools:ignore="ContentDescription" />

            <com.diceplatform.doris.ui.LabeledImageView
                android:id="@+id/favoriteButton"
                style="@style/DorisButton.FavoriteOutline"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="30dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintEnd_toStartOf="@id/watchlistButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginEnd="30dp"
                tools:ignore="ContentDescription" />

            <com.diceplatform.doris.ui.LabeledImageView
                android:id="@+id/infoButton"
                style="@style/DorisButton.Info"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="30dp"
                android:adjustViewBounds="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintEnd_toStartOf="@id/favoriteButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginEnd="30dp"
                tools:ignore="ContentDescription" />

            <com.diceplatform.doris.ui.LabeledImageView
                android:id="@+id/epgButton"
                style="@style/DorisButton.Epg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="30dp"
                android:adjustViewBounds="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_constraintEnd_toStartOf="@id/infoButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginEnd="30dp"
                tools:ignore="ContentDescription" />

        </com.diceplatform.doris.ui.TopIconsView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/seekbar_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_end="128dp"
            app:layout_constraintStart_toStartOf="parent" />

        <com.diceplatform.doris.ui.bif.BifPreviewImageView
            android:id="@+id/bifPreviewImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/seekbar_guideline"
            app:layout_constraintStart_toStartOf="@id/start_vertical_guideline"
            tools:visibility="visible" />

        <androidx.media3.ui.DefaultTimeBar
            android:id="@+id/exo_progress"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:focusedByDefault="true"
            android:nextFocusLeft="@id/exo_progress"
            app:ad_marker_color="@color/ad_marker_color"
            app:ad_marker_width="@dimen/ad_marker_width"
            app:layout_constraintEnd_toStartOf="@id/end_vertical_guideline"
            app:layout_constraintStart_toStartOf="@id/start_vertical_guideline"
            app:layout_constraintTop_toTopOf="@id/seekbar_guideline"
            app:played_ad_marker_color="@color/transparent"
            app:played_color="#80ABD2"
            app:scrubber_color="@color/white"
            app:unplayed_color="#59FFFFFF" />

        <TextView
            android:id="@+id/exo_remaining_time"
            style="@style/DorisText.Time.Position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:minWidth="60dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@id/end_vertical_guideline"
            app:layout_constraintTop_toBottomOf="@id/seekbar_guideline"
            tools:text="1:71:02"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/scrubPositionTextView"
            style="@style/DorisText.Time.ScrubPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textColor="@color/white"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/exo_progress"
            app:layout_constraintEnd_toEndOf="@id/exo_progress"
            tools:text="02:02"
            tools:visibility="visible" />

        <View
            android:id="@+id/play_pause_stub"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="44.5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seekbar_guideline" />


        <com.diceplatform.doris.ui.LabeledImageView
            android:id="@+id/exo_play"
            style="@style/DorisButton.Play"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="44.5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@id/exo_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seekbar_guideline"
            tools:ignore="ContentDescription"
            tools:visibility="gone" />

        <com.diceplatform.doris.ui.LabeledImageView
            android:id="@+id/exo_pause"
            style="@style/DorisButton.Pause"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="44.5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@id/exo_pause"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seekbar_guideline"
            tools:ignore="ContentDescription" />


        <com.diceplatform.doris.ui.LabeledImageView
            android:id="@+id/exo_rew"
            style="@style/DorisButton.Rewind"
            android:layout_width="wrap_content"
            android:layout_height="17.5dp"
            android:layout_marginEnd="30dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusLeft="@id/exo_rew"
            android:nextFocusDown="@id/exo_rew"
            app:layout_constraintBottom_toBottomOf="@id/play_pause_stub"
            app:layout_constraintEnd_toStartOf="@id/play_pause_stub"
            app:layout_constraintTop_toTopOf="@id/play_pause_stub"
            tools:ignore="ContentDescription" />

        <com.diceplatform.doris.ui.LabeledImageView
            android:id="@+id/exo_ffwd"
            style="@style/DorisButton.FastForward"
            android:layout_width="wrap_content"
            android:layout_height="17.5dp"
            android:layout_marginStart="30dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusRight="@id/exo_ffwd"
            android:nextFocusDown="@id/exo_ffwd"
            app:layout_constraintBottom_toBottomOf="@id/play_pause_stub"
            app:layout_constraintStart_toEndOf="@id/play_pause_stub"
            app:layout_constraintTop_toTopOf="@id/play_pause_stub"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/channelLogoImageView"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="38.5dp"
            android:adjustViewBounds="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:layout_constraintStart_toStartOf="@id/start_vertical_guideline"
            app:layout_constraintTop_toBottomOf="@id/seekbar_guideline"
            tools:ignore="ContentDescription"
            tools:src="@drawable/sample_channel_logo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/liveConstraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_go_live_selector"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:minWidth="111dp"
            app:layout_constraintBottom_toBottomOf="@id/play_pause_stub"
            app:layout_constraintEnd_toEndOf="@id/end_vertical_guideline"
            app:layout_constraintTop_toTopOf="@id/play_pause_stub"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/liveIndicatorImageView"
                style="@style/DorisImageViewLiveIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="10dp"
                android:duplicateParentState="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/liveTextView"
                style="@style/DorisText.Live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1.5dp"
                android:layout_marginEnd="18dp"
                android:duplicateParentState="true"
                android:ellipsize="end"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:includeFontPadding="false"
                android:maxLines="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@id/liveIndicatorImageView"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="GO LIVE" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top"
            app:constraint_referenced_ids="titleTextView, nowPlayingContainer" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nowPlayingContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:layout_constraintBottom_toTopOf="@id/titleTextView"
            app:layout_constraintEnd_toEndOf="@id/vertical_60_guideline"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/start_vertical_guideline"
            app:layout_constraintTop_toTopOf="@id/horizontal_top">

            <ImageView
                android:id="@+id/nowPlayingLiveIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:src="@drawable/ic_dot_red"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/nowPlayingTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/nowPlayingTextView"
                style="@style/DorisText.NowPlaying"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/nowPlayingLiveIndicator"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginStart="0dp"
                tools:layout_height="wrap_content"
                tools:layout_width="wrap_content"
                tools:text="Playing Live" />

            <TextView
                android:id="@+id/nowPlayingTimeTextView"
                style="@style/DorisText.NowPlayingTime"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/nowPlayingTextView"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_height="wrap_content"
                tools:layout_width="wrap_content"
                tools:text="6:30PM - 8:45PM" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.diceplatform.doris.ui.playlist.PlaylistView
            android:id="@+id/playlistView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="114dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seekbar_guideline"
            tools:visibility="visible" />

        <FrameLayout
            android:id="@+id/bottomOverlayComponent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="114dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seekbar_guideline"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
