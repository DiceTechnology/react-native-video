<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_controls" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tvBottomBarWidgetContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <com.previewseekbar.PreviewSeekBarLayout
            android:id="@+id/previewSeekBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- TODO: Enable the following when adding the thumbnails -->
            <!-- set width to @dimen/video_preview_width -->
            <!-- set height to @dimen/video_preview_height -->
            <FrameLayout
                android:id="@+id/previewFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#a00"
                    android:contentDescription="@string/preview_image" />

            </FrameLayout>

            <com.previewseekbar.PreviewSeekbarTV
                android:id="@+id/previewSeekBar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/previewFrameLayout"
                android:maxHeight="@dimen/previewseekbar_progress_height"
                android:minHeight="@dimen/previewseekbar_progress_height"
                android:minWidth="@dimen/previewseekbar_progress_width"
                android:maxWidth="@dimen/previewseekbar_progress_width"
                android:focusableInTouchMode="false"
                android:focusable="true"
                android:nextFocusRight="@+id/tvPlayPauseImageView"
                android:nextFocusDown="@+id/tvPlayPauseImageView"
                android:progressDrawable="@drawable/previewseekbar_progress_drawable">
            </com.previewseekbar.PreviewSeekbarTV>

        </com.previewseekbar.PreviewSeekBarLayout>

        <LinearLayout
            android:id="@+id/bottomBarWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:background="@drawable/bg_bottom_bar">

            <ImageButton
                android:id="@+id/tvPlayPauseImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:layout_marginRight="8dp"
                android:contentDescription="@string/play_video"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:nextFocusRight="@+id/tvAudioSubtitlesBtn"
                android:nextFocusDown="@+id/tvAudioSubtitlesBtn"
                android:src="@drawable/tv_play_btn_selector"
                android:background="@drawable/tv_btn_bg_selector">
                <requestFocus/>
            </ImageButton>

            <ImageButton
                android:id="@+id/tvAudioSubtitlesBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:nextFocusLeft="@+id/tvPlayPauseImageView"
                android:nextFocusUp="@+id/tvPlayPauseImageView"
                android:src="@drawable/tv_audio_subtitles_selector"
                android:background="@drawable/tv_btn_bg_selector" />

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/currentTimeTextView"
                android:textAppearance="@style/TextAppearance.OverlayText"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:text="@string/default_time"
                android:textAlignment="center"
                android:ellipsize="end"
                android:maxLines="1" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/timeDividerTextView"
                android:textAppearance="@style/TextAppearance.OverlayText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:gravity="center"
                android:text="/"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/durationTextView"
                android:textAppearance="@style/TextAppearance.OverlayText"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:text="@string/default_time"
                android:textAlignment="center"
                android:ellipsize="end"
                android:maxLines="1" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/liveTextView"
                android:textAppearance="@style/TextAppearance.LiveText"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:background="@drawable/bg_live"
                android:gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/live"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/bottomRightIconButton"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="#00000000"
                android:contentDescription="@string/fullscreen"
                android:gravity="center"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_fullscreen_off"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>